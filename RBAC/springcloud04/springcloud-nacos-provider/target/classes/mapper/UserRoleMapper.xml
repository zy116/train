<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boss.springcloud.dao.UserRoleMapper">

    <resultMap id="BaseResultMap" type="com.boss.springcloud.entity.RolePermission">
        <id column="id" property="id"/>
        <result column="sys_role_id" property="roleId"/>
        <result column="sys_user_id" property="userId"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, sys_role_id, sys_user_id
    </sql>

    <select id="queryAllUserRole" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from springcloud_rbac.sys_user_role
    </select>

    <insert id="addUserRole" parameterType="UserRole">
        insert into springcloud_rbac.sys_user_role(sys_role_id,sys_user_id)
      values (#{roleId}, #{userId})
    </insert>

    <delete id="deleteById" parameterType="int">
        delete from springcloud_rbac.sys_user_role where id=#{id}
    </delete>

    <update id="updateUserRole" parameterType="UserRole">
        update springcloud_rbac.sys_user_role
        set sys_role_id = #{roleId},sys_user_id = #{userId}
        where id = #{id}
    </update>
</mapper>