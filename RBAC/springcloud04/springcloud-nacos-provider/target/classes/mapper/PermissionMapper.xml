<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boss.springcloud.dao.PermissionMapper">
    <resultMap id="BaseResultMap" type="com.boss.springcloud.entity.Permission">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="url" property="url"/>
        <result column="available" property="available"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, name, url, available, create_time, update_time
    </sql>

    <select id="queryAllPermission" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from springcloud_rbac.sys_permission
    </select>
</mapper>