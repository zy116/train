<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boss.springcloud.dao.RoleMapper">

    <resultMap id="BaseResultMap" type="com.boss.springcloud.entity.Role">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="available" property="available"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, name, available, create_time, update_time
    </sql>

    <select id="queryAllRole" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from springcloud_rbac.sys_role
    </select>

    <insert id="addRole" parameterType="Role">
        insert into springcloud_rbac.sys_role(name,available,create_time,update_time)
      values (#{name},#{available},now(), now())
    </insert>

    <delete id="deleteById" parameterType="int">
        delete from springcloud_rbac.sys_role where id=#{id}
    </delete>

    <update id="updateRole" parameterType="Role">
        update springcloud_rbac.sys_role
        set name = #{name},available = #{available},update_time = now()
        where id = #{id}
    </update>
</mapper>