<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boss.springcloud.dao.RolePermissionMapper">

    <resultMap id="BaseResultMap" type="com.boss.springcloud.entity.RolePermission">
        <id column="id" property="id"/>
        <result column="sys_role_id" property="roleId"/>
        <result column="sys_permission_id" property="permissionId"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, sys_role_id, sys_permission_id
    </sql>

    <select id="queryAllRolePermission" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from springcloud_rbac.sys_role_permission
    </select>

    <insert id="addRolePermission" parameterType="RolePermission">
        insert into springcloud_rbac.sys_role_permission(sys_role_id,sys_permission_id)
      values (#{roleId}, #{permissionId})
    </insert>

    <delete id="deleteById" parameterType="int">
        delete from springcloud_rbac.sys_role_permission where id=#{id}
    </delete>

    <update id="updateRolePermission" parameterType="RolePermission">
        update springcloud_rbac.sys_role_permission
        set sys_role_id = #{roleId},sys_permission_id = #{permissionId}
        where id = #{id}
    </update>

</mapper>